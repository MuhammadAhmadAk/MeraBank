@model MeraBank.Models.tbl_AccountHolder

@{
    Layout = "~/Views/Shared/banktPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Account</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Save", "Bank", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center my-3 fs-1">Account Registration</h4>
        <hr />
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ActName, htmlAttributes: new { @class = "control-label col-md-4" })
