                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ActStatus, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.EditorFor(model => model.ActStatus, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ActStatus, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ActAdress, htmlAttributes: new { @class = "control-label col-md-4" })
